<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D0DF3B"
    tools:context=".ThirdActivity">

    <TextView
        android:id="@+id/activtity3View"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/page1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="64dp"
        android:text="Page 1"
        app:layout_constraintStart_toStartOf="@+id/activtity3View"
        app:layout_constraintTop_toBottomOf="@+id/activtity3View" />

    <Button
        android:id="@+id/page2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginTop="28dp"
        android:text="Page 2"
        app:layout_constraintStart_toStartOf="@+id/page1"
        app:layout_constraintTop_toBottomOf="@+id/page1" />

    <Button
        android:id="@+id/page3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="9dp"
        android:text="Page 3"
        app:layout_constraintEnd_toEndOf="@+id/page2"
        app:layout_constraintTop_toBottomOf="@+id/page2" />
</androidx.constraintlayout.widget.ConstraintLayout>